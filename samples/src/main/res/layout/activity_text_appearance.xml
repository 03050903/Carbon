<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.zielony.carbon.widget.TextView
        android:text="Headline"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:textAppearance="?attr/carbon_textAppearance_headline" />

    <pl.zielony.carbon.widget.TextView
        android:text="Title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:textAppearance="?attr/carbon_textAppearance_title" />

    <pl.zielony.carbon.widget.TextView
        android:text="Subhead"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:textAppearance="?attr/carbon_textAppearance_subhead" />

    <pl.zielony.carbon.widget.TextView
        android:text="Body 2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:textAppearance="?attr/carbon_textAppearance_body2" />

    <pl.zielony.carbon.widget.TextView
        android:text="Body 1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:textAppearance="?attr/carbon_textAppearance_body1" />

    <pl.zielony.carbon.widget.TextView
        android:text="Caption"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:textAppearance="?attr/carbon_textAppearance_caption" />

    <pl.zielony.carbon.widget.TextView
        android:text="Button"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/carbon_padding"
        android:paddingRight="@dimen/carbon_padding"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/carbon_toolbarHeight"
        android:textAppearance="?attr/carbon_textAppearance_button" />

</LinearLayout>