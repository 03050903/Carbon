<pl.zielony.carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <pl.zielony.carbon.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <pl.zielony.carbon.widget.SVGView
            android:id="@+id/icon1"
            app:carbon_rippleColor="?attr/carbon_rippleColor"
            app:carbon_inAnimation="pop"
            app:carbon_outAnimation="pop"
            app:carbon_src="@raw/ic_today_24px"
            android:layout_width="@dimen/carbon_toolbarHeight"
            android:layout_height="@dimen/carbon_toolbarHeight"
            android:padding="@dimen/carbon_padding" />

        <pl.zielony.carbon.widget.SVGView
            android:id="@+id/icon2"
            app:carbon_rippleColor="?attr/carbon_rippleColor"
            app:carbon_inAnimation="pop"
            app:carbon_outAnimation="pop"
            app:carbon_src="@raw/ic_print_24px"
            android:layout_width="@dimen/carbon_toolbarHeight"
            android:layout_height="@dimen/carbon_toolbarHeight"
            android:padding="@dimen/carbon_padding" />
    </pl.zielony.carbon.widget.Toolbar>

    <pl.zielony.carbon.widget.FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <pl.zielony.carbon.widget.SVGActionButton
            android:layout_gravity="right|bottom"
            android:layout_width="@dimen/carbon_fabSize"
            android:layout_height="@dimen/carbon_fabSize"
            android:layout_margin="@dimen/carbon_padding"
            app:carbon_src="@raw/ic_face_24px" />
    </pl.zielony.carbon.widget.FrameLayout>
</pl.zielony.carbon.widget.LinearLayout>
