<?xml version="1.0" encoding="utf-8"?>
<pl.zielony.carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <pl.zielony.carbon.animation.TransitionLayout
        android:id="@+id/transition"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <pl.zielony.carbon.widget.LinearLayout
            android:background="?attr/carbon_colorBackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <pl.zielony.carbon.widget.TextView
                android:textSize="20sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_margin="@dimen/carbon_padding"
                android:hint="login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <pl.zielony.carbon.widget.TextView
                android:textSize="20sp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_margin="@dimen/carbon_padding"
                android:hint="password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <pl.zielony.carbon.widget.Button
                android:text="login"
                android:layout_gravity="right"
                android:layout_margin="@dimen/carbon_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <pl.zielony.carbon.widget.Divider
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </pl.zielony.carbon.widget.LinearLayout>

        <pl.zielony.carbon.widget.LinearLayout
            android:background="?attr/carbon_colorAccent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <pl.zielony.carbon.widget.LinearLayout
            android:background="?attr/carbon_colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </pl.zielony.carbon.animation.TransitionLayout>

    <pl.zielony.carbon.widget.Button
        android:id="@+id/button"
        android:layout_margin="@dimen/carbon_padding"
        android:layout_gravity="end|bottom"
        android:text="animate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</pl.zielony.carbon.widget.FrameLayout>